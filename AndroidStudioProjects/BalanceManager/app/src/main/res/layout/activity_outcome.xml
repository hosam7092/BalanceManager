<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/home1"
        android:layout_width="51dp"
        android:layout_height="36dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimaryDark"
        android:drawableBottom="@drawable/ic_arrow_24dp"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:textAllCaps="true"
        android:textColor="#303F9F" />

    <TextView
        android:id="@+id/titleInComes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:text="@string/outcomes"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/amountoutComes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#6ef4f4f4"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
        android:drawablePadding="78dp"
        android:ems="1"
        android:hint="@string/amount"
        android:inputType="numberDecimal"
        android:padding="16dp"
        android:textColorHint="#fff" android:drawableStart="@drawable/ic_attach_money_black_24dp" />

    <EditText
        android:id="@+id/dealsNameoutComes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#6ef4f4f4"
        android:drawableLeft="@drawable/ic_add_circle_white_24dp"
        android:drawablePadding="78dp"
        android:ems="1"
        android:hint="@string/dealsname"
        android:inputType="text"
        android:padding="16dp"
        android:textColorHint="#fff" android:drawableStart="@drawable/ic_add_circle_white_24dp" />

    <EditText
        android:id="@+id/categoryoutComes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#6ef4f4f4"
        android:drawableLeft="@drawable/ic_extension_white_24dp"
        android:drawablePadding="78dp"
        android:ems="1"
        android:hint="category"
        android:inputType="text"
        android:padding="16dp"
        android:textColorHint="#fff" android:drawableStart="@drawable/ic_extension_white_24dp"/>

    <Button
        android:id="@+id/btnoutComes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@drawable/background_login_two"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:text="@string/enter"
        android:textAllCaps="true"
        android:textColor="#303F9F" />


</LinearLayout>